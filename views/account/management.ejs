<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<div class="management-container">
  <%- messages() %>

  <% if (errors) { %>
      <ul class="notice">
          <% errors.array().forEach(error => { %>
              <li><%= error.msg %></li>
          <% }) %>
      </ul>
  <% } %>

  <div class="account-management">
      <p>You're logged in</p>
      <p>Welcome <%= locals.accountData.account_firstname %>!</p>

      <h2>Account Management Options</h2>
      <ul>
        <li><a href="/account/update">Update Account Information</a></li>
        <li><a href="/reviews/user">Manage Your Reviews</a></li>
      </ul>
  </div>
</div>